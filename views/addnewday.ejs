<!DOCTYPE html>
<html>
<head>
<style>
    body {
    background-image: url("img/background_forest_gray.jfif");
    }
</style> 
<meta name="viewport" content="width=device-width, initial-scale=1">  
 <link rel="stylesheet" href="css/register.css">
<title>Lägg till ny dag</title>
</head>
<body>
    
    <form action="" method="post">
        <div class="container">  
        <center>  <h1>Lägg till Schema</h1> </center>
      
      
      <!--Date Block-->  
      <div class="above-form">Datum</div>
      <div class="center-form">  
      <center>  <label></label> </center>  
      <input type="text" name="date" placeholder="Datum" value="2022-" size="15" required /> 
      </div> 
      
      <!--Location Block-->
      <div class="above-form">Plats</div>
      <div class="center-form">
      <center>  <label></label> </center> 
      <input type="text" name="location" placeholder="Plats" size="15"required />   
      </div>
      
      
      <!--Course Block-->
      <div class="above-form">Kurs</div>
      <div class="center-form">
      <center> <label></label> </center>  
      <input type="text" name="course" placeholder="Kurs" size="2"/>     
      </div>
      
      <!--Responsible Teacher Block-->
      <div class="above-form">Ansvarig lärare 1</div>
      <div class="center-form">
      <center> <label></label> </center>   
       <input type="text" placeholder="Ansvarig lärare" name="teacher1" required>  
      </div> 
      
      <!--PM Block-->
      <div class="above-form">Förmiddag</div>
      <div class="center-form">
      <center> <label></label> </center>  
      <input type="text" placeholder="Förmiddag" name="morning" required>  
      </div> 
      
      <!--AM Block-->
      <div class="above-form">Eftermiddag</div>
      <div class="center-form">
      <center> <label></label> </center>   
      <input type="text" placeholder="Eftermidag" name="afternoon" required>  
      </div>
    
       <!--Responsible Teacher Block 2-->
       <div class="above-form">Ansvarig lärare 2 (frivillig)</div>
       <div class="center-form">
       <center> <label></label> </center>   
       <input type="text" placeholder="Ansvarig lärare" name="teacher2">  
       </div>
    
        <!--Topic Block-->
      <div class="above-form">Topic (frivllig)</div>
      <div class="center-form">
      <center> <label></label> </center>   
      <input type="text" placeholder="Topic" name="topic">  
      </div>
    
       <!--PM Comment Block-->
       <div class="above-form">Kommentar förmiddag (frivillig)</div>
       <div class="center-form">
       <center> <label></label> </center>   
       <input type="text" placeholder="Kommentar förmiddag" name="morningcomment">  
       </div>
    
        <!--AM Comment Block-->
      <div class="above-form">Kommentar eftermiddag (frivillig)</div>
      <div class="center-form">
      <center> <label></label> </center>   
      <input type="text" placeholder="Kommentar eftermiddag" name="afternooncomment">  
      </div>
      
      
      <div class="center-form">
      <button type="submit" class="registerbtn">Lägg till schema</button>
      </div>
      </form>

      <!--Sidenav w/ script-->
    <div style="width: 2.5%; position: absolute; top: 1.3%;">
        <div id="mySidenav" class="sidenav">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <a href="http://localhost:3000/login">Logga In</a>
            <a href="http://localhost:3000/register">Registera Konto</a>
            <a href="http://localhost:3000/">Dagsschema</a>
            <a href="http://localhost:3000/vecka">Veckoschema</a>
            <a href="http://localhost:3000/add_schedule">Lägg till schema</a>
          </div>
          <span style="font-size:30px;cursor:pointer; color: burlywood;" onclick="openNav()">&#9776;</span>
        </div>
          
          <script>
          function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
          }
          
          function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
          }
          </script>


</body>
</html>