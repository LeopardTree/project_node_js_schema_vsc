<body>  

<form action="" method="post">
  <div class="container">  
  <center>  <h1> Register</h1> </center>


<!--FirstNameBlock-->  
<div class="above-form">First Name</div>
<div class="center-form">  
<center>  <label></label> </center>  
<input type="text" name="firstname" placeholder= "Firstname" size="15" required /> 
</div> 

<!--LastNameBlock-->
<div class="above-form">Last Name</div>
<div class="center-form">
<center>  <label></label> </center> 
<input type="text" name="lastname" placeholder="Lastname" size="15"required />   
</div>


<!--PhoneFormBlock-->
<div class="above-form">Phone</div>
<div class="center-form">
<center> <label></label> </center>  
<input type="text" name="phone" placeholder="Phone"  value="+46" size="2"/>     
</div>

<!--EmailFormBlock-->
<div class="above-form">Email</div>
<div class="center-form">
<center> <label></label> </center>   
 <input type="text" placeholder="Enter Email" name="email" required>  
</div> 

